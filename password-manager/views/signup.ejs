
<!doctype html>
<html>
<head>
  <title>Node Authentication</title>
  <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css"> <!-- load bootstrap css -->
  <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css"> <!-- load fontawesome -->
  <link rel="stylesheet"  href="stylesheets/buttons.css"> <!-- load google and facebook buttons -->
  <script src="https://wzrd.in/standalone/copy-to-clipboard@latest" async></script>
  <style>
  body        { padding-top:80px; }
  </style>
</head>
<body>
  <div class="container">

    <div class="col-sm-6 col-sm-offset-3">

      <h1><span class="fa fa-sign-in"></span> Signup</h1>
      <% if (messages.generated.length > 0 ) { %>
        <div class="alert alert-success">Generated password: <%=messages.generated %></div> <% }
        %>

        <% if (messages.messages.signupMessage > 0) { %>
          <div class="alert alert-danger">Passport errors: <%=messages.signupMessage %></div> <% }
          %>

      <% if (messages.errors.length > 0) { %>
        <div class="alert alert-danger"><% messages.errors.forEach(function(errors) { %> <li><%= errors %></li> <% }); %></div>
        <% } %>



        <!-- LOGIN FORM -->
        <form action="/signup" method="post">
          <div class="form-group">
            <label>Email</label>
            <input type="text" class="form-control" name="email">
          </div>
          <div class="form-group">
            <label>Password</label>
            <input type="password" class="form-control" name="password" >
          </div>
          <div class="form-group">
            <label>Confirm password</label>
            <input type="password" class="form-control" name="password_confirm">
          </div>
          <div class="form-group">
            <label>Would you like to authorize your current IP?</label>
            <div class="onoffswitch">
              <input type="checkbox" name="onoffswitch" class="onoffswitch-checkbox" id="myonoffswitch" checked>
              <label class="onoffswitch-label" for="myonoffswitch">
                <span class="onoffswitch-inner"></span>
                <span class="onoffswitch-switch"></span>
              </label>
            </div>
          </div>
          <button type="submit" class="btn btn-warning btn-lg">Signup</button>
          <a href="/generate">
            Generate a strong masterpassword
          </a>
        </form>

        <hr>

        <p>Already have an account? <a href="/login">Login</a></p>
        <a href="/auth/facebook">
          <button class="loginBtn loginBtn--facebook">Log in with facebook</button>
        </a>
        <a href="/auth/google">
          <button class="loginBtn loginBtn--google">Log in with google</button>
        </a>
        <p>Or go <a href="/">home</a>.</p>

      </div>

    </div>
  </body>
  </html>
